{
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json --noEmit && vite build",
    "build:local": "tsc -p tsconfig.build.json --noEmit && BASE_PATH='/' vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,css,html}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,json,css,html}'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:run": "vitest run"
  },
  "dependencies": {
    "bootstrap": "^5.0.0",
    "jquery": "^3.6.0",
    "mapbox-gl": "^1.12.0",
    "select2": "^4.1.0-rc.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/bootstrap": "^5.2.10",
    "@types/jquery": "^3.5.32",
    "@types/mapbox-gl": "^1.13.6",
    "@types/node": "^24.0.3",
    "@types/select2": "^4.0.63",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "gh-pages": "^6.3.0",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.2",
    "prettier": "^3.6.2",
    "tdd-guard": "^0.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  }
}
