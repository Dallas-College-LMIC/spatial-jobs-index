{
    "mcpServers": {
        "serena": {
            "command": "uvx",
            "args": ["--from", "git+https://github.com/oraios/serena", "serena-mcp-server"]
        },
	"browsermcp": {
	    "command": "npx",
    	    "args": ["@browsermcp/mcp@latest"]	    
	},
	"context7": {
	    "command": "npx",
    	    "args": ["-y", "@upstash/context7-mcp"]	    
	},
	"nixos": {
	      "command": "uvx",
	      "args": ["mcp-nixos"]
	    },
	"postgres": {
	      "command": "./scripts/postgres-mcp-wrapper.sh",
	      "args": ["--access-mode=restricted"]
	    }
    }
}
