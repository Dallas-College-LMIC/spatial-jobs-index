{
  "environment": {
    "preferNixShell": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/ammar/Documents/projects/work/spatial-jobs-index/.claude/hooks/post-edit-format.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/ammar/Documents/projects/work/spatial-jobs-index/.claude/hooks/pre-bash-check.sh",
            "timeout": 2000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/home/ammar/Documents/projects/work/spatial-jobs-index/.claude/hooks/post-session-summary.sh",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}